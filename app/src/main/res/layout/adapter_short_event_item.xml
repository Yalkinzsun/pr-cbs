<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_cl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
                android:id="@+id/home_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp">

            <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/home_day_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:textColor="@color/main_color"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/home_weekday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="чет"
                        android:textColor="@color/main_color"
                        android:textSize="18dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/home_event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/colorPrimary"
                    android:text="Название мероприятия"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            <RelativeLayout
                    android:id="@+id/home_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">

                <ImageView
                        android:id="@+id/home_iv_1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/title_event"
                        android:src="@drawable/ic_event_location_24dp"
                        android:layout_centerVertical="true"/>

                <TextView
                        android:id="@+id/home_event_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_toEndOf="@id/home_iv_1"
                        android:text="Локация локация локация"
                        android:textSize="16dp" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>