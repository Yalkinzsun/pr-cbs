<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Fragments.HomeFragment">


        <TextView
                android:id="@+id/tv1_home_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:text="Последние поступления"
                android:textSize="18sp"
                android:textStyle="bold" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ProgressBar
                    android:id="@+id/progressBarLatest"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent = "true"/>

            <com.yarolegovich.discretescrollview.DiscreteScrollView
                    android:id="@+id/infinite_carousel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsv_orientation="horizontal">

            </com.yarolegovich.discretescrollview.DiscreteScrollView>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/home_tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Ближайшие мероприятия"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                    android:id="@+id/home_event_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp"
                    android:layout_below = "@id/home_tv_1">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/home_cl_0_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                            <androidx.cardview.widget.CardView
                                    android:id="@+id/home_cv_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="0dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp">

                                    <TextView
                                            android:id="@+id/home_day_number_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="13"
                                            android:textColor="@color/main_color"
                                            android:textSize="25sp"
                                            android:textStyle="bold"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                    <TextView
                                            android:id="@+id/home_weekday_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="чет"
                                            android:textColor="@color/main_color"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/home_day_number_1" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                    android:id="@+id/home_event_name_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:text="Название мероприятия"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toEndOf="@id/home_cv_1"
                                    app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/home_cl_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/home_cv_1">

                                <ImageView
                                        android:id="@+id/home_iv_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_event_location_24dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                        android:id="@+id/home_event_location_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:text="Локация локация локация"
                                        android:textSize="14dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toEndOf="@id/home_iv_1"
                                        app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                                android:id="@+id/home_view_1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/home_cl_0_1"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@color/colorPrimary" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/home_cl_0_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/home_view_1">


                            <androidx.cardview.widget.CardView
                                    android:id="@+id/home_cv_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="0dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp">

                                    <TextView
                                            android:id="@+id/home_day_number_2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="13"
                                            android:textColor="@color/main_color"
                                            android:textSize="25sp"
                                            android:textStyle="bold"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                    <TextView
                                            android:id="@+id/home_weekday_2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="чет"
                                            android:textColor="@color/main_color"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/home_day_number_2" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                    android:id="@+id/home_event_name_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:text="Название мероприятия"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toEndOf="@id/home_cv_2"
                                    app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/home_cl_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/home_cv_2">

                                <ImageView
                                        android:id="@+id/home_iv_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_event_location_24dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                        android:id="@+id/home_event_location_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:text="Локация локация локация"
                                        android:textSize="14dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toEndOf="@id/home_iv_2"
                                        app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <View
                                android:id="@+id/home_view_2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/home_cl_0_2"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@color/colorPrimary" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/home_cl_0_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/home_view_2">


                            <androidx.cardview.widget.CardView
                                    android:id="@+id/home_cv_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="0dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginEnd="5dp">

                                    <TextView
                                            android:id="@+id/home_day_number_3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="13"
                                            android:textColor="@color/main_color"
                                            android:textSize="25sp"
                                            android:textStyle="bold"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                    <TextView
                                            android:id="@+id/home_weekday_3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="чет"
                                            android:textColor="@color/main_color"
                                            android:textSize="18dp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/home_day_number_3" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                    android:id="@+id/home_event_name_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:text="Название мероприятия"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toEndOf="@id/home_cv_3"
                                    app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/home_cl_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/home_cv_3">

                                <ImageView
                                        android:id="@+id/home_iv_3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_event_location_24dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:text="Локация локация локация"
                                        android:textSize="14dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toEndOf="@id/home_iv_3"
                                        app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </RelativeLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_more_info"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_horizontal">

                        <TextView
                                android:id="@+id/home_more_events_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Подробнее"
                                android:textColor="@color/main_color"
                                android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <ProgressBar
                    android:id="@+id/progressBarHomeEvent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent = "true"
                    android:visibility="invisible"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/tv2_home_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:text="Наши рекомендации"
                android:textSize="18sp"
                android:textStyle="bold" />


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp">

        <ProgressBar
                android:id="@+id/progressBarRecommended"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent = "true"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRecommendedBooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>