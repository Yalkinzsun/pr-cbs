<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.pr_cbs.EventFullInfo">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_event_full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

<!--        <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="25.01.20"-->
<!--                android:textSize="20sp"-->
<!--                android:textStyle="bold" />-->

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">


            <TextView
                    android:id="@+id/full_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Название мероприятия"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>

            <TextView
                    android:id="@+id/full_event_additional_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дополнительная информация"
                    android:textSize="18sp"
                    android:textStyle="italic" />


            <ImageView
                    android:id="@+id/full_event_cover"
                    android:layout_width="270dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="left"/>

            <TextView
                    android:id="@+id/full_event_annotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Аннотация к мероприятию"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorPrimary" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Библиотека-организатор:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/full_event_library"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Название библиотеки"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ответственное лицо:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/full_event_responsible_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Имий Фамильев Отчествович"
                    android:textSize="18sp"
                    android:textStyle="normal" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_event_date_range" />

                <TextView
                        android:id="@+id/full_event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Дата"
                        android:textSize="18sp"
                        android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_event_time_24dp" />

                <TextView
                        android:id="@+id/full_event_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Время"
                        android:textSize="18sp"
                        android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_phone_black_24dp" />

                <TextView
                        android:id="@+id/full_event_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Телефон"
                        android:textSize="18sp"
                        android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_event_location_24dp" />

                <TextView
                        android:id="@+id/full_event_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Адрес"
                        android:textSize="18sp"
                        android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
